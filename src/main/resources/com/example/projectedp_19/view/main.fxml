<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.projectedp_19.controller.MainController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <TextField fx:id="searchField" promptText="Wpisz nazwę przystanku..." HBox.hgrow="ALWAYS"/>
            <Button fx:id="searchButton" text="Szukaj"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4">
            <VBox spacing="5">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label text="Przystanki"/>
                <ListView fx:id="stopList"/>
                <Button fx:id="addToFavoritesButton" text="❤️ Dodaj do ulubionych"/>
            </VBox>

            <VBox spacing="5">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label text="Najbliższe odjazdy"/>
                <ListView fx:id="departureList"/>
                <Button fx:id="notifyButton" text="🔔 Powiadom o kursie"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
